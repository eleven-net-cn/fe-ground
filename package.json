{
  "private": true,
  "author": "Eleven <master@eleven.net.cn>",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eleven-net-cn/fe-ground.git",
    "branch": "master"
  },
  "scripts": {
    "create-package": "node ./scripts/create-package.js",
    "docs:start": "dumi dev",
    "docs:build": "dumi build",
    "watch": "father-build --watch",
    "build": "father-build",
    "test": "umi-test -u",
    "test:coverage": "umi-test --coverage",
    "lint": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"packages/*/src/**/*.{ts,tsx}\"",
    "changelog": "lerna-changelog",
    "pub": "yarn lint && yarn test && lerna publish",
    "commit": "git-cz",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.1.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^3.7.0",
    "@types/jest": "^26.0.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@umijs/fabric": "^2.5.6",
    "@umijs/test": "^3.3.7",
    "antd": "^4.12.3",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-styled-components": "^1.12.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "cz-lerna-changelog": "^2.0.3",
    "dayjs": "^1.10.4",
    "dumi": "^1.0.38",
    "dumi-theme-mobile": "^1.1.1",
    "eslint": "^7.20.0",
    "father-build": "^1.19.6",
    "figlet": "^1.5.0",
    "fs-extra": "^9.1.0",
    "gitmoji-cli": "^3.2.18",
    "inquirer": "^8.0.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.5.3",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "shelljs": "^0.8.4",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "{packages,docs}/**/*.{js?(x),json,css,scss,less,html,md,yml}": [
      "prettier --write"
    ],
    "{packages,docs}/**/*.{ts?(x)}": [
      "prettier --parser=typescript --write"
    ],
    "packages/*/src/**/*.{ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  }
}
